<article>
  <% if notice %>
    <aside id="notice"><%= notice %></aside>
  <% end %>

  <h2>Your Cart</h2>
  <table>

    <%= render(cart.line_items) %>

    <tfoot>
      <tr>
        <th colspan="2">Total:</th>
        <td class="price"><%= number_to_currency(cart.total_price) %></td>
      </tr>
    </tfoot>
  </table>

  <div>
      <%= button_to 'Empty cart', cart,
                    method: :delete,
                    data: { confirm: 'Are you sure?' },
                    remote: true,
                    form: { style: 'display:inline-block;' } %>
      <%= button_to 'Checkout', new_order_path,
                    method: :get,
                    class: "checkout",
                    form: { style: current_page?(controller: 'orders', action: 'new') ? 'display:none;' : 'display:inline-block;' } %>

  </div>

</article>